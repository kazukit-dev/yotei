{
  "name": "yotei",
  "version": "0.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev:all": "turbo run dev",
    "check:all": "turbo run lint:check format:check typecheck",
    "check:api": "turbo run lint:check format:check typecheck --filter=@yotei/api",
    "check:web": "turbo run lint:check format:check typecheck --filter=@yotei/web",
    "test:all": "turbo run test",
    "test:api": "turbo run test --filter=@yotei/api",
    "prepare": "cd .. && husky"
  },
  "keywords": [
    "remix",
    "hono",
    "neverthrow"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "only-allow": "^1.2.1",
    "turbo": "^2.5.4"
  },
  "engines": {
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "volta": {
    "node": "22.16.0"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,js}": [
      "pnpm run check:api"
    ],
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "pnpm run check:web"
    ]
  }
}
