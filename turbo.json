{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint:check": {
      "dependsOn": ["^lint:check"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "format:fix": {
      "dependsOn": ["^format:fix"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
